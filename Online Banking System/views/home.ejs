         window.SpeechRecognition =
        window.SpeechRecognition || window.webkitSpeechRecognition;

      const recognition = new SpeechRecognition();
      recognition.lang = "en-US";
      recognition.interimResults = true;

      recognition.addEventListener("result", (e) => {
        const text = Array.from(e.results)
          .map((result) => result[0])
          .map((result) => result.transcript)
          .join("");

        if (e.results[0].isFinal) {

               if (text.includes("report credit card")) {
            var button = document.getElementById("rcc");

          
            button.click();
          }
              if (text.includes("sign out")) {
            var button = document.getElementById("so");

          
            button.click();
          }
              if (text.includes("reminders")) {
            var button = document.getElementById("rm");

          
            button.click();
          }
            if (text.includes("report technical")) {
            var button = document.getElementById("rt");

          
            button.click();
          }
           if (text.includes("technical")) {
            var button = document.getElementById("rt");

          
            button.click();
          }

            if (text.includes("credit card transactions")) {
            var button = document.getElementById("cct");

          
            button.click();
          }
             if (text.includes("credit card points")) {
