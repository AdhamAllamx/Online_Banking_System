          }
             if (text.includes("credit card payments")) {
            var button = document.getElementById("ccpy");

          
            button.click();
          }

            if (text.includes("open account")) {
            var button = document.getElementById("openaccount");

          
            button.click();
          }
             if (text.includes("card")) {
            var button = document.getElementById("cards");

          
            button.click();
          }
             if (text.includes("report")) {
            var button = document.getElementById("report");

          
            button.click();
          }

            if (text.includes("account")) {
            var button = document.getElementById("account");

          
            button.click();
          }
          if (text.includes("open account")) {
            var button = document.getElementById("openaccount");

          
            button.click();
          }
          if (text.includes("close account")) {
            var button = document.getElementById("closeaccount");

        
            button.click();
          }
          if (text.includes("account transactions")) {
              var button = document.getElementById("transactions");

          
            button.click();
          }
          if (text.includes("transfer")) {
           var button = document.getElementById("transfer");

          
            button.click();
          } 
            if (text.includes("account payments")) {
                var button = document.getElementById("paymentsa");

          
            button.click();
            }
          
          if (text.includes("loans")) {
               var button = document.getElementById("loans");

          
            button.click();

            }
          }
        }
      );

      recognition.addEventListener("end", () => {
        recognition.start();
      });

      function speak() {
        var speechSynthesis = window.speechSynthesis;
        var message = new SpeechSynthesisUtterance();
        message.text =
          "welcome to the home page say open Account , close account , Transactions , transfer , paymrnts , loans , apply for credit card , credit card transactions , credit card points , credit card payments or report credit card or technical issue  ";
        var voices = speechSynthesis.getVoices();
      

        // Adjust the speed (rate) of speech
        message.rate = .6; // Adjust the value (0.1 to 10) for slower or faster speech

        // Speak the message
        speechSynthesis.speak(message);
      }
     
      recognition.start();
       speak();
    </script>
