        flex-direction: row;
      }
      .project-card:hover .project-img {
        opacity: 0.9;
      }
      .project-info {
        padding: 1em;
      }
      .project-category {
        font-size: 0.8em;
        color: black;
      }
      .project-title {
        display: flex;
        justify-content: space-between;
        text-transform: uppercase;
        font-weight: 800;
        margin-top: 10px;
      }
      .more-details {
        text-decoration: none;
        color: #3a6cf4;
      }
      .more-details:hover {
        color: #601cfc;
      }
      .contact .icon {
