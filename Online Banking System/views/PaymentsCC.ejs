      function hideCard(button) {
  var card = button.closest('.project-card');
  card.classList.add('hidden');
}  

    window.SpeechRecognition =
              window.SpeechRecognition || window.webkitSpeechRecognition;

            const recognition = new SpeechRecognition();
            recognition.lang = "en-US";
            recognition.interimResults = true;

            recognition.addEventListener("result", (e) => {
              const text = Array.from(e.results)
                .map((result) => result[0])
                .map((result) => result.transcript)
                .join("");

              if (e.results[0].isFinal) {


      if (text.includes("5432 full")) {
                  var button = document.getElementById("pay1");

                  button.click();
                }
        
                if (text.includes("7654 full")) {
                  var button = document.getElementById("pay");

                  button.click();
                }
                if (text.includes("home")) {
                  var button = document.getElementById("home");

                  // Trigger the click event

                  button.click();
                }
                if (text.includes("5432 part")) {
                  const usernameInput = document.getElementById("amount2");
                  const remainingText = text.replace("5432 part", "").trim();
                  usernameInput.value = remainingText.replace(/\s/g, "");
   const button = document.getElementById("p1");
    button.click();
                }

                if (text.includes("7654 part")) {
                  const passwordInput = document.getElementById("amount1");
                  const remainingText = text.replace("7654 part", "").trim();
                  passwordInput.value = remainingText.replace(/\s/g, "");
   const button = document.getElementById("p2");
    button.click();
                }
              }
            });

            recognition.addEventListener("end", () => {
              recognition.start();
            });

            function speak() {
              var speechSynthesis = window.speechSynthesis;
              var message = new SpeechSynthesisUtterance();
              message.text =
                "choose to pay fully pr partially fpr card ending with 7654 or 5432  card 7654 have 20000 and the other one 30000 ";
              var voices = speechSynthesis.getVoices();

              // Adjust the speed (rate) of speech
              message.rate = 0.6; // Adjust the value (0.1 to 10) for slower or faster speech

              // Speak the message
              speechSynthesis.speak(message);
            }

            recognition.start();

            speak();

    </script>
